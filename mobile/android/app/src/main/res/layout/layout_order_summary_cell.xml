<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="RtlSymmetry"
  android:background="@color/colorBackground">

  <TextView
    android:id="@+id/order_summary_cell_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/order_summary_cell_price"
    app:layout_constraintBottom_toBottomOf="@id/order_summary_cell_price"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:text="8 items"
    android:textColor="@color/colorAccent"
    android:textSize="16sp"
    app:layout_constrainedHeight="true"/>

  <TextView
    android:id="@+id/order_summary_cell_price"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/order_summary_cell_title"
    app:layout_constraintRight_toRightOf="parent"
    android:textAlignment="textEnd"
    android:textColor="@color/colorForeground"
    android:fontFamily="@font/manrope_semibold"
    android:textSize="20sp"
    tools:text="Â£12.99"
    app:layout_constrainedHeight="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
