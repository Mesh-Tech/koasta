<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginBottom="20dp">

  <View
    android:id="@+id/venue_loading_item_thumb"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="@drawable/placeholder"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

  <View
    android:id="@+id/venue_loading_item_title"
    android:layout_marginTop="10dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="0dp"
    android:layout_height="20dp"
    android:background="@drawable/placeholder_mini"
    app:layout_constraintTop_toBottomOf="@id/venue_loading_item_thumb"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintWidth_percent="0.15" />

  <View
    android:id="@+id/venue_loading_item_subtitle"
    android:layout_marginTop="10dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="0dp"
    android:layout_height="20dp"
    android:background="@drawable/placeholder_mini"
    app:layout_constraintTop_toBottomOf="@id/venue_loading_item_title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintWidth_percent="0.50" />

  <View
    android:id="@+id/venue_loading_item_comment"
    android:layout_marginTop="10dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="0dp"
    android:layout_height="20dp"
    android:background="@drawable/placeholder_mini"
    app:layout_constraintTop_toBottomOf="@id/venue_loading_item_subtitle"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintWidth_percent="0.30"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
